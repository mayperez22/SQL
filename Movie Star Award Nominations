/* Create table about the people and what they do here */

--Famous movie stars with nominations

--Table of actors names, age, and number of movies they have been in
CREATE TABLE Movie_Stars (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    age INTEGER,
    in_how_many_movies INTEGER);
    
