-- Table of notable nominated awards that the actors have each been nominated in
CREATE TABLE Nominated_Awards (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    Academy_Awards INTEGER,
    Emmy_Awards INTEGER,
    Golden_Globes INTEGER,
    Screen_Actors_Guild INTEGER);
    
