--Table of number of nominations in Best Actor/Actress and Best Supporting Actor/Actress each actor has had
CREATE TABLE Award_Categories (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT,
    "Best Actor/Actress" INTEGER,
    "Best Supporting Actor/Actress" INTEGER);
    
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Chris Evans", 0, 0);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Scarlett Johansson", 6, 3);
