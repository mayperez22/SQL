INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Jennifer Lawrence", 9, 3);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Meryl Streep", 52, 12);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Robert De Niro", 16, 3);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Bradley Cooper", 7, 3);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Jane Fonda", 20, 3);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Reese Witherspoon", 13, 0);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Will Smith", 10, 0);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Zendaya", 4, 0);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Timothee Chalamet", 3, 3);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Leo DiCaprio", 20, 4);
INSERT INTO Award_Categories (fullname, "Best Actor/Actress", "Best Supporting Actor/Actress") VALUES ("Sandra Bullock", 9, 0);


SELECT movie_stars.fullname, movie_stars.age, movie_stars.in_how_many_movies AS "In # of movies", Nominated_Awards.Academy_Awards, Nominated_Awards.Emmy_Awards, Nominated_Awards.Golden_Globes, Nominated_Awards.Screen_Actors_Guild AS "SAG", Award_Categories."Best Actor/Actress", Award_Categories."Best Supporting Actor/Actress"  
FROM movie_stars
JOIN Nominated_Awards
ON movie_stars.id = Nominated_Awards.id
JOIN Award_Categories
ON movie_stars.id = Award_Categories.id
GROUP BY movie_stars.age
